<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="siliconsolutions.passwordmanager">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pass_mgr"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomescreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PasswordRegistration"
            android:label="@string/title_activity_password_registartion" />
        <activity
            android:name=".PasswordLogin"
            android:label="@string/title_activity_password_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PinLogin"
            android:label="@string/title_activity_pin_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PinRegistration"
            android:label="@string/title_activity_pin_registration"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SwipeLogin" />
        <activity android:name=".SwipeRegistration" />
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_activity_homescreen"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>