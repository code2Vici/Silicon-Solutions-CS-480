<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#F1F8FF"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/dialog_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top|right"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <EditText
        android:id="@+id/nameEditTextView"
        android:layout_margin="2dp"
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/phoneEditTextView"
        android:inputType="phone"
        android:layout_margin="2dp"
        android:hint="Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/addressEditTextView"
        android:inputType="textPostalAddress"
        android:layout_margin="2dp"
        android:hint="Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/emailEditTextView"
        android:inputType="textEmailAddress"
        android:layout_margin="2dp"
        android:hint="E-mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/addDialogLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_weight="3"
            android:id="@+id/newEntryEditTextView"
            android:inputType="text"
            android:layout_margin="2dp"
            android:hint="New Field"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Spinner
            android:id="@+id/newEntrySpinner"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </Spinner>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/addDialogLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_weight="3"
            android:id="@+id/newEntryEditTextView1"
            android:inputType="text"
            android:layout_margin="2dp"
            android:hint="New Field"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Spinner
            android:id="@+id/newEntrySpinner1"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/addDialogLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_weight="3"
            android:id="@+id/newEntryEditTextView2"
            android:inputType="text"
            android:layout_margin="2dp"
            android:hint="New Field"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Spinner
            android:id="@+id/newEntrySpinner2"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/addDialogLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_weight="3"
            android:id="@+id/newEntryEditTextView3"
            android:inputType="text"
            android:layout_margin="2dp"
            android:hint="New Field"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Spinner
            android:id="@+id/newEntrySpinner3"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/addDialogLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_weight="3"
            android:id="@+id/newEntryEditTextView4"
            android:inputType="text"
            android:layout_margin="2dp"
            android:hint="New Field"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Spinner
            android:id="@+id/newEntrySpinner4"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/buttonsLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:id="@+id/addContactButton"
            android:text="Add Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/addNewEntryButton"
            android:text="Add New Field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>




</LinearLayout>